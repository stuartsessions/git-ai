{
  "name": "git-ai-vscode",
  "displayName": "git-ai",
  "description": "Keep track of code generated by AI.",
  "version": "0.1.6",
  "icon": "git-ai.png",
  "publisher": "git-ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/acunniffe/git-ai"
  },
  "engines": {
    "vscode": ">=1.99.3",
    "node": ">=20.18.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "git-ai",
      "properties": {
        "gitai.enableCheckpointLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable notifications for AI and human edit detection."
        },
        "gitai.experiments.aiTabTracking": {
          "type": "boolean",
          "default": false,
          "description": "Enable tracking for AI tab completion detection (experimental)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "yarn run copy-static && yarn run compile && vsce package",
    "copy-static": "cp ../../assets/docs/git-ai.png ./git-ai.png",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "ovsx": "0.10.4",
    "@vscode/vsce": "3.6.0",
    "@types/vscode": "1.99.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
